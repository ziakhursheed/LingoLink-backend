{
  "manifest_version": 3,
  "name": "LingoLink",
  "version": "1.1",
  "description": "Multilingual real-time speech translator with auto language detection",
  "permissions": ["microphone", "storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
